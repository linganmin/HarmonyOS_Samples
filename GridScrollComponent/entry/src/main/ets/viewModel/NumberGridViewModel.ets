import { GridManager } from "@hadss/scroll_components";
import NumberModel from "../model/NumberModel";
import NumberViewModel from "./NumberViewModel";

@Observed
export default class NumberGridViewModel {
  @Track numbers: NumberViewModel[] = [];
  gridViewManager?: GridManager;

  constructor(gridViewManager: GridManager) {
    this.gridViewManager = gridViewManager;
  }

  loadNumbers() {
    for (let index = 0; index < 20; index++) {
      let model: NumberModel = new NumberModel();
      model.value = index;
      let viewModel = new NumberViewModel();
      viewModel.updateModel(model);
      this.numbers.push(viewModel);
    }
    this.gridViewManager?.setDataSource(this.numbers);
  }
}
