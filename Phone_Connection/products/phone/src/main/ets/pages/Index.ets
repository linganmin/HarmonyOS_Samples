import { promptAction } from '@kit.ArkUI';

@Entry
@Component
struct Index {
  pathStack: NavPathStack = new NavPathStack();

  build() {
    Navigation(this.pathStack) {
      Column() {
        Button($r('app.string.interconnection_communication'))
          .width(328)
          .height(40)
          .margin({
            bottom: 12
          })
          .onClick(() => {
            this.pathStack.pushPathByName('ConnectViewPage', null);
          })

        Button($r('app.string.Watch_sensor'))
          .width(328)
          .height(40)
          .margin({
            bottom: 16
          })
          .onClick(() => {
            promptAction.openToast({
              message: $r('app.string.Watch_sensor_toast'),
              duration: 2000
            });
          })
      }
      .padding({
        left: 16,
        right: 16
      })
      .justifyContent(FlexAlign.End)
      .width('100%')
      .height('100%')
    }
    .title($r('app.string.EntryAbility_label'))
    .width('100%')
    .height('100%')
    .hideToolBar(true)
  }
}